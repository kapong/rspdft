{
  "version": "2.0",
  "template": {
    "source": "sample/base.pdf"
  },
  "fonts": [
    {
      "id": "sarabun",
      "regular": "fonts/THSarabunNew.ttf"
    }
  ],
  "blocks": [
    {
      "id": "title",
      "type": "text",
      "text": "Invoice",
      "position": { "x": 297, "y": 50 },
      "font": { "family": "sarabun", "size": 24, "style": "bold" },
      "align": "center"
    },
    {
      "id": "invoice_no",
      "type": "text",
      "bind": "$.invoice_no",
      "position": { "x": 450, "y": 80 },
      "font": { "family": "sarabun", "size": 12 },
      "align": "right"
    },
    {
      "id": "customer_name",
      "type": "text",
      "bind": "$.customer.name",
      "position": { "x": 100, "y": 120 },
      "font": { "family": "sarabun", "size": 14 }
    },
    {
      "id": "amount",
      "type": "text",
      "bind": "$.amount",
      "position": { "x": 450, "y": 200 },
      "font": { "family": "sarabun", "size": 16 },
      "format": "#,###.##",
      "align": "right"
    },
    {
      "id": "amount_text",
      "type": "text",
      "bind": "$.amount",
      "position": { "x": 100, "y": 220 },
      "font": { "family": "sarabun", "size": 12 },
      "formatType": "thai-baht"
    },
    {
      "id": "date",
      "type": "text",
      "bind": "$.date",
      "position": { "x": 450, "y": 120 },
      "font": { "family": "sarabun", "size": 12 },
      "formatType": "thai-date-long",
      "align": "right"
    }
  ]
}